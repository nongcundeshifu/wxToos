/* components/tabbar/tabbar.wxss */

.flex {
    display: flex;
}

.flex-v {
    flex-direction: column;
    width: 100%;
}

.flex-middle {
	align-items: center;
}
.flex-wrap {
	flex-wrap:wrap;
}
.flex-1 {
    flex: 1 1 0%;
    width:0;
}
.flex-v-1 {
  flex:1 1 0%;
}
.flex-zero-shrink {
	flex-shrink:0;
}
.flex-flex-adapt {
	flex:1 0 auto;
}
.flex-justify-between {
    justify-content: space-between;
}
.flex-justify-center {
    justify-content: center;
}
.flex-justify-around{
  justify-content: space-around;
}


.tab-page {
	width: 100%;
	height: 100%;

}

.tabbar-page {
	width: 100%;
	-webkit-overflow-scrolling:touch;
	overflow-y:scroll;
}
.tabbar-page > view {
	-webkit-overflow-scrolling:touch;
	overflow-y:scroll;
}
.tabbar {
	height: 92rpx;
	font-size: 20rpx;
	background: #fff;
}

.tabbar .icon {
	width: 64rpx;
	height: 64rpx;
}
.tabbar .text {
	text-align: center;
    margin-bottom: 4rpx;
}

.tabbar .icon.single-icon {
	width: 76rpx;
	height: 76rpx;
	border-radius: 100%;
	box-shadow: 2rpx 2rpx 10rpx rgba(253,84,84,0.5);
}

/*tabbar 样式 end */




