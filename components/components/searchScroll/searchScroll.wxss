/* components/searchScroll/searchScroll.wxss */

page {
    height: 100%;
    background: #e3e3e3;
}

.flex {
    display: flex;
}

.flex-v {
    flex-direction: column;
    width: 100%;
}

.flex-middle {
  align-items: center;
}
.flex-wrap {
  flex-wrap:wrap;
}
.flex-1 {
    flex: 1 1 0%;
    width:0;
}
.flex-v-1 {
  flex:1 1 0%;
}
.flex-zero-shrink {
  flex-shrink:0;
}
.flex-flex-adapt {
  flex:1 0 auto;
}
.flex-justify-between {
    justify-content: space-between;
}
.flex-justify-center {
    justify-content: center;
}
.flex-justify-around{
  justify-content: space-around;
}


.search {
  width: 100%;
  font-size: 28rpx;


  padding: 20rpx;
  box-sizing: border-box;
  background: red;
}
.search form {
  display: block;
  width: 100%;
  position: relative;
}
button:after {
  border: none;
}
.search .search_mask  {
  position: absolute;
  top: 0;
  left: 0;
  z-index: 9;
  font-size: 28rpx;
  width: 100%;
}
.search .search_mask .input-container {
  background: #fff;
  padding-left: 20rpx;
}
.search .search_main input{
    background:#fff;
    border-radius:10rpx;
    font-size:28rpx;
    line-height:1;
    padding-left: 20rpx;
    color: #666;
}

.search .search-button , .search .cancel-button {
  padding: 0;
  border: 0;
  line-height: 1;
  font-size: 28rpx;
  padding: 10rpx 20rpx;
  margin: 0 20rpx;
  border: 1rpx solid #e3e3e3;
  background: #fff;
}



